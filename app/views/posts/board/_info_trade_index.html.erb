                            <% end %>
                        <% else %>
                            <%= image_tag ("/img/no_image.png"), class: "card-img-top", width: "318px", height: "179px;" %>
                        <% end %>
                        <div align="center" class="image_overfext etc">
                            <% if current_user.has_role? :admin %>
                                <% if post.reports.size >= post.num %>
