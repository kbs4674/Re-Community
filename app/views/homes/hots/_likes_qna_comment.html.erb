<div style="margin-top: 5px;"></div>
<% @hot_qna_replys.each do |qna| %>
    <%# 현재시간에서 1주일 이전 게시글 %>
    <% if Time.now - qna.created_at <= 7.days %>
        <% if (qna.get_upvotes.size - qna.get_downvotes.size) > 0 %>
            <div class="row">
                <%# 제목 %>
                <div class="offset-1 offset-sm-1 offset-md-0"></div>
                <div align="left" style="padding: 10px 10px 10px 10px; border-bottom: 1px solid white;" class="col-8 col-sm-9 col-md-7 etc">
                    <%= link_to qna_path(qna.qna) do %>
                        <%= content_tag(:span, " <b>#{qna.get_upvotes.size - qna.get_downvotes.size}</b>".html_safe, class: "far fa-thumbs-up etc", style: "font-weight: normal !important; font-size: 15px; margin-left: 5px; margin-right: 10px; color: #fff; margin-bottom: -3px;") %>
                        <%= content_tag(:span, truncate( raw( sanitize(qna.body, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 30, :omission => "..."), class: "etc") %><br/>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>