<table width="100%">
    <tr>
        <td>
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#back" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">백록관(백반)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#chun" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">천지관(백반)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#normal" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">재정(퇴계관 등)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#BTL" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">BTL</a>
                        </li>
                    </ul>
                </div>
            </div>
            <br/>
        </td>
    </tr>
    <tr>
        <td>
            <!-- Tab panes -->
            <div class="tab-content" style="margin-top: -40px;">
                <%# 백록관(백반) 식단 %>
                <div class="tab-pane fade show active" id="back" role="tabpanel">
                    <% @back_meal.first(1).each_with_index do |info, index| %>
                        <div class="col-md-12">
                            <%= info %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 천지관(백반) 식단 %>
                <div class="tab-pane fade" id="chun" role="tabpanel">
                    <% @chun_meal.first(1).each_with_index do |info, index| %>
                        <div class="col-md-12">
                            <%= info %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 기숙사 재정생활관 식단 %>
                <div class="tab-pane fade" id="normal" role="tabpanel">
                    <% @dormitory_meal_normal.first(1).each_with_index do |info, index| %>
                        <div class="col-md-12">
                            <%= info %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 기숙사 BTL 식단 %>
                <div class="tab-pane fade" id="BTL" role="tabpanel">
                    <% @dormitory_meal_BTL.first(1).each_with_index do |info, index| %>
                        <div class="col-md-12">
                            <%= info %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </td>
    </tr>
</table>