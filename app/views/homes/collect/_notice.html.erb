<div style="margin-top: 15px;"></div>
<% @kangwon_notice.first(5).each_with_index do |info, index| %>
  <div class="col-md-12">
    <a href="http://www.kangwon.ac.kr/www/<%= @kangwon_notice_link[index] %>" target="_blank">
      <%= content_tag(:span, '<i class="fas fa-caret-right"></i>'.html_safe, class: "etc", style: "font-weight: normal !important;") %>
      <%= content_tag(:span, truncate( raw( sanitize(@kangwon_campus[index], :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 10, :omission => "..."), class: "etc badge badge-primary") %>
      <%= content_tag(:span, truncate( raw( sanitize(info, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 20, :omission => "..."), class: "etc") %>
    </a>
  </div>
<% end %>