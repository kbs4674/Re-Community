<table width="100%">
    <tr>
        <td>
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#search" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">구인</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#seek" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">구직</a>
                        </li>
                    </ul>
                </div>
            </div>
            <br/>
        </td>
    </tr>
    <tr>
        <td>
            <!-- Tab panes -->
            <div class="tab-content" style="margin-top: -40px;">
                <%# 구인 %>
                <div class="tab-pane fade show active" id="search" role="tabpanel">
                    <% @bulletins.each do |bulletin| %>
                      <% if bulletin.title == "일자리 : 구인" %>
                        <%= render "homes/collect/posts_job", title: bulletin.title, posts: bulletin.posts %>
                      <% end %>
                    <% end %>
                </div>
                <%# 구직 %>
                <div class="tab-pane fade" id="seek" role="tabpanel">
                  <% @bulletins.each do |bulletin| %>
                    <% if bulletin.title == "일자리 : 구직" %>
                      <%= render "homes/collect/posts_job", title: bulletin.title, posts: bulletin.posts %>
                    <% end %>
                  <% end %>
                </div>
            </div>
        </td>
    </tr>
</table>