<table width="100%">
    <tr>
        <td>
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#m_back" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">백록관</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_chun" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">천지관</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_normal" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">재정(퇴계관 등)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_BTL" role="tab" style="margin-bottom: 0px; color: black; font-size: 15px;">BTL</a>
                        </li>
                    </ul>
                </div>
            </div>
            <br/>
        </td>
    </tr>
    <tr>
        <td>
            <!-- Tab panes -->
            <div class="tab-content" style="margin-top: -40px;">
                <%# 백록관(백반) 식단 %>
                <div class="tab-pane fade show active" id="m_back" role="tabpanel">
                    <% CrawlingBack.all.first(1).each do |info| %>
                        <div class="col-12 col-sm-12">
                            <%= info.title %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 천지관(백반) 식단 %>
                <div class="tab-pane fade" id="m_chun" role="tabpanel">
                    <% CrawlingChun.all.first(1).each do |info| %>
                        <div class="col-12 col-sm-12">
                            <%= info.title %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 기숙사 재정생활관 식단 %>
                <div class="tab-pane fade" id="m_normal" role="tabpanel">
                    <% CrawlingDormitoryMealNormal.all.first(1).each do |info| %>
                        <div class="col-12 col-sm-12">
                            <%= info.title %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <%# 기숙사 BTL 식단 %>
                <div class="tab-pane fade" id="m_BTL" role="tabpanel">
                    <% CrawlingDormitoryMealBtl.all.first(1).each do |info| %>
                        <div class="col-12 col-sm-12">
                            <%= info.title %>
                            <div align="right">
                                <% if Time.zone.now.strftime("%H").to_i >= 0 && Time.zone.now.strftime("%H").to_i <= 9 %>
                                    <span class="badge badge-pill badge-success"><%= Time.zone.now.strftime('%m. %d') %> 아침</span>
                                <% elsif Time.zone.now.strftime("%H").to_i > 9 && Time.zone.now.strftime("%H").to_i <= 14 %>
                                    <span class="badge badge-pill badge-info"><%= Time.zone.now.strftime('%m. %d') %> 점심</span>
                                <% else %>
                                    <span class="badge badge-pill badge-primary"><%= Time.zone.now.strftime('%m. %d') %> 저녁</span>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </td>
    </tr>
</table>