<%# ITX 출발 전철 정보 %>
<%# PC %>
<div class="hidden-sm-down" align="right" style="background: url('/img/ITX.png') no-repeat; background-position: 0px -60px; background-color: white; border-radius: 60px; padding: 10px; margin-top: 10px;">
    <span style="margin-right: 60px;">남춘천 발 <b style="color: #53c371">ITX 청춘</b> | </span>
    <% @itx_time.first(1).each_with_index do |info, index| %>
        <%= content_tag(:span, truncate( raw( sanitize(info, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 100, :omission => "..."), class: "etc", style: "margin-right: 30px;") %>
    <% end %>
</div>

<%# 모바일 %>
<div class="hidden-md-up" align="right" style="background: url('/img/ITX.png') no-repeat; background-position: -50px -50px; background-color: white; border-radius: 30px; padding: 10px; margin-top: 20px;">
  <span style="margin-right: 20px;">남춘천 발 <b style="color: #53c371">ITX 청춘</b> | </span><br/>
    <% @itx_time.first(1).each_with_index do |info, index| %>
        <%= content_tag(:span, truncate( raw( sanitize(info, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 100, :omission => "..."), class: "etc") %>
    <% end %>
    <span style="margin-right: 20px;">출발합니다.</span>
</div>