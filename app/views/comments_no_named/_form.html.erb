<% if (not current_user.has_any_role? :block_yellow, :block_red) || (current_user.has_role? :admin) %>
  <%= form_for @new_comment do |f| %>  
    <%= f.hidden_field :commentable_id, value: @new_comment.commentable_id %>
    <%= f.hidden_field :commentable_type, value: @new_comment.commentable_type %>
    <div class="field form-group">
      <%= f.text_field :nickname, class: "form-control no-border col-5 col-sm-4 col-md-3", placeholder: '닉네임(가명)', required: "true" %>
      <%= f.text_area :body, class: 'form-control', style: "margin-top: 10px;", placeholder: '마음의 상처를 입히는 댓글은 피해주세요..ㅠ_ㅠ', required: "true" %><br/>
        <%= submit_tag "댓글", class: 'btn btn-info', style: "float: right" %><br/><br/>
    </div>
  <% end %>
<% end %>